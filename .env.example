# =============================================================================
# RAG Financial Filing Analyst â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Generation model (options: gpt-4o, gpt-4-turbo, claude-3-5-sonnet-20241022)
LLM_PROVIDER=openai
LLM_MODEL_NAME=gpt-4o
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Embedding model (options: text-embedding-3-small, text-embedding-3-large, all-MiniLM-L6-v2)
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# -----------------------------------------------------------------------------
# Vector Store (ChromaDB)
# -----------------------------------------------------------------------------
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=sec_filings
# Persistence directory for local ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# -----------------------------------------------------------------------------
# Chunking Configuration
# -----------------------------------------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=section_aware

# -----------------------------------------------------------------------------
# Retrieval Configuration
# -----------------------------------------------------------------------------
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.3
RETRIEVAL_STRATEGY=ensemble
MMR_DIVERSITY_SCORE=0.3
DENSE_WEIGHT=0.6
SPARSE_WEIGHT=0.4

# -----------------------------------------------------------------------------
# Guardrails
# -----------------------------------------------------------------------------
CONFIDENCE_THRESHOLD=0.7
ENABLE_HALLUCINATION_CHECK=true
ENABLE_NUMERICAL_VALIDATION=true

# -----------------------------------------------------------------------------
# SEC EDGAR
# -----------------------------------------------------------------------------
SEC_EDGAR_USER_AGENT=YourName your.email@example.com
SEC_EDGAR_RATE_LIMIT=10

# -----------------------------------------------------------------------------
# MLflow Experiment Tracking
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=rag-financial-analyst

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
